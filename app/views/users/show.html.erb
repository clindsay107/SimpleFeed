<div class='col-xs-5 col-xs-offset-1'>
  <h1>Hello, <%= @user.username%></h1>
</div>

  <div class="row"></div>

  <div class='col-xs-3 col-xs-offset-1' id='add-new-feed'>
    <form action="<%= user_feeds_url(@user) %>" method="POST">
        <div class="input-group">
          <%= csrf_token %>
          <input type="text" class="form-control" name="feed[url]" placeholder="http://feedurl.com/rss">
          <span class="input-group-btn">
            <button type="submit" class="btn btn-primary">
              <span class="glyphicon glyphicon-plus-sign"></span>  Add Feed
            </button>
          </span>
      </div>
    </form>

    <br>
    <div id="current-feeds">
      <ul>
        <% @feeds.each do |feed| %>
          <li>
            <%= feed.title %>
            <a href="<%= user_url(@user) %>"><span data-id="<%= feed.id %>" class="glyphicon glyphicon-refresh"></span></a>
          </li>
        <% end %>
      </ul>
    </div>

  </div>

  <div class="col-xs-6 col-xs-offset-1" id="current-feed-entries">
    <% @feeds.each do |feed| %>
      <li><h3><%= feed.title %></h3></li>
        <% feed.entries.each do |entry| %>
          <li><a href="<%= CGI.unescapeHTML(entry.link) %>"><%= CGI.unescapeHTML(entry.title) %></a></li>
        <% end %>
    <% end %>
  </div>

  <div clas="row">
    <footer class='col-xs-4 col-xs-offset-1'>
      <%= link_to "Log Out", session_url, method: :delete%>
    </footer>
  </div>

